generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  TODO
  DONE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())

  tasks Task[]
  tags  Tag[]
}

model Task {
  id        String     @id @default(uuid())
  userId    String
  title     String
  status    TaskStatus @default(TODO)
  dueDate   DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user          User               @relation(fields: [userId], references: [id])
  taskTags      TaskTag[]
  externalLinks ExternalTaskLink[]

  @@index([userId])
  @@index([status])
}

model Tag {
  id        String   @id @default(uuid())
  userId    String
  name      String
  color     String?
  createdAt DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id])
  taskTags TaskTag[]

  @@unique([userId, name])
  @@index([userId])
}

model TaskTag {
  taskId String
  tagId  String

  task Task @relation(fields: [taskId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([taskId, tagId])
  @@index([tagId])
}

model ExternalTaskLink {
  id             String   @id @default(uuid())
  taskId         String
  provider       String
  externalId     String
  externalListId String
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id])

  @@index([taskId])
  @@unique([provider, externalId])
}
